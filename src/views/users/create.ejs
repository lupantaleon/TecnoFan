<%- include('../partials/head.ejs') %>
    <link rel="stylesheet" href="../css/productCreate.css">
    </head>

    <body>
        <%- include('../partials/header.ejs') %>
            <main class="container">
                <section class="row">
                    <div class="card-body">
                        <h2 class="display-4 text-white bg-info text-center pt-2">Crear un Usuario</h2>
                    </div>
                </section>

                <section class="bg-home pt-4">
                    <div class="admin-product-form-container">
                        <form action="/users/create" method="POST">
                            <div class="form-fields">
                                <div class="form-column">
                                    <div class="form-group">
                                        <input type="text" id="first_name" class="box" name="first_name" placeholder="Nombre"
                                            required="required" value="nombre">
                                    </div>
                                    <div class="form-group">
                                        <input type="text" class="box" name="last_name" placeholder="Apellido"
                                            required="required" value="apellido">
                                    </div>
                                    <div class="form-group">
                                        <input type="text" class="box" name="age" placeholder="Edad"
                                            required="required" value="30">
                                    </div>
                                    <div class="form-group">
                                        <input type="email" class="box" name="email" placeholder="email"
                                            required="required" value="alkjewrg@gmail.com">
                                    </div>
                                    <div class="form-group">
                                        <input type="password" class="box" name="password" placeholder="Password"
                                            required="required" value="aerhaaerh">
                                    </div>
                                    <div class="form-group">
                                        <input type="text" class="box" name="document" placeholder="Documento"
                                            required="required" value="30456849">
                                    </div>
                                    

                                </div>
                            </div>
                            
                            <div class="btn">
                                <button type="submit" class="btn-save">Guardar</button>
                                <a href="/users">
                                    <input type="button" class="btn-back" value="Volver"></a>
                            </div>

                        </form>
                    </div>
                </section>
            </main>
    </body>

    </html>